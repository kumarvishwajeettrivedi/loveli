# Production Environment Configuration
NODE_ENV=production

# Database (Use your production database URL)
DATABASE_URL="postgresql://username:password@your-production-db:5432/loveli"

# Redis (Use your production Redis URL)
REDIS_URL="redis://your-production-redis:6379"

# OpenAI API
OPENAI_API_KEY="your_production_openai_api_key_here"

# Hugging Face API
HUGGINGFACE_TOKEN="your_production_huggingface_token_here"

# WebRTC (Production TURN servers)
TURN_SERVER_URL="your_production_turn_server_url"
TURN_SERVER_USERNAME="your_production_turn_username"
TURN_SERVER_CREDENTIAL="your_production_turn_credential"

# Session
SESSION_SECRET="your_production_session_secret_here"

# Next.js
NEXTAUTH_URL="https://your-domain.com"
NEXTAUTH_SECRET="your_production_nextauth_secret"

# WebSocket
WS_PORT="3001"
NEXT_PUBLIC_WS_URL="https://your-domain.com"
